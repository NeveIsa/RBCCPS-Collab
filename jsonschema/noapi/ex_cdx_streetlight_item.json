               },
               "targetControlPolicyParams": {
                 "type": "object",
                 "description": "Describes the values of control policy parameters",
                 "properties": {
                     "targetControlPolicy": {
                     "enum": [
                       "AUTO_TIMER",
                       "AUTO_LUX",
                       "MANUAL"
